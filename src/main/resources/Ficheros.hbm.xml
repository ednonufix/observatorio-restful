<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cu.cupet.cubalub.observatorio.model.utiles.TFicherosConvertidos" table="tb_ficheros_conv">
        <id name="id_fichero">
            <generator class="native"/>
        </id>

        <property name="nomb_fichero" not-null="true" type="string" unique="true"/>
        <property name="ruta_relativa" not-null="true" type="string"/>
        <property name="audio_libro" not-null="true" type="true_false"/>
        <property name="fichero_pdf" not-null="true" type="true_false"/>
        <property name="fecha_conversion" not-null="true" type="java.util.Date"/>
        
    </class>
</hibernate-mapping>
